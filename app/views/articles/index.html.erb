 <h1 class="text-center mt-4">Articles listing page</h1>
    <p>
    <%= link_to "Create a new article", new_article_path, class: "btn btn-success mx-auto btn-lg d-grid gap-2 d-md-flex mt-4 col-4 justify-content-md-center" %>
    </p>
    <div class="container">
        <% @articles.each do |article| %>
            <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow p-1 mb-5 bg-white rounded">
                <div class="card-header fst-italic">
                    by Creator
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                    <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
                    <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
                    <%= link_to "Delete", article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?"}, class: "btn btn-outline-danger" %>
                </div>
                <div class="card-footer text-muted">
                   <small>Created <%= time_ago_in_words(article.created_at) %> ago,
                   updated <%= time_ago_in_words(article.updated_at) %> ago</small>
                </div>
                </div>
        </div>
        </div>
        <% end %>
</div>