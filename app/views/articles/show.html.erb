<h2 class="text-center mt-4"><%= @article.title %></h2>
    <div class="container">
            <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card shadow p-1 mb-5 bg-white rounded">
                <div class="card-header text-center fst-italic">
                    by Creator
                </div>
                <div class="card-body">
                    <div class="card-text"><%= simple_format(@article.description) %></div>
                    <div class="text-center">
                        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                        <%= link_to "Delete", article_path(@article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?"}, class: "btn btn-outline-danger" %>
                     </div>
                </div>
                <div class="card-footer text-center text-muted">
                   <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                   updated <%= time_ago_in_words(@article.updated_at) %> ago</small>
                </div>
                </div>
                <%= link_to '[Return to articles listing]', articles_path, class: "mx-auto justify-content-center d-grid gap-2 mb-5 d-md-flex mt-4 col-4 text-info" %>
        </div>
     </div>
</div>