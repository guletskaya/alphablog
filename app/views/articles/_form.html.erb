<div class="container bg-green">
   
    <%= render 'shared/errors' %>
 <div class="mb-4">
    <div class="row justify-content-md-center bg-success shadow rounded">
        <div class="p-3 border bg-light col-8 mt-4 mb-4 shadow rounded">
            <%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Title</label>
                    <%= f.text_field :title, class:"form-control mb-20 mt-20 mx-auto shadow", placeholder: "Title of new article" %>
                </div>
               <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                    <%= f.text_area :description, rows: 10, class: "form-control mb-2 mx-auto shadow rounded", placeholder: "Description of new article" %>
               </div>
               <div class="col-auto">
                 <%=f.submit class: "btn btn-outline-success mx-auto btn-lg d-grid gap-2 d-md-flex mt-4 col-4 justify-content-md-center" %>
               </div>
            <% end %> 
            <%= link_to '[Cancel and return to articles listing]', articles_path, class: "mx-auto justify-content-center d-grid gap-2 d-md-flex mt-4 col-4 text-info" %>
        </div>
    </div>
  </div>
</div>